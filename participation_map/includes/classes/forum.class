	class BS_Forum{
		
		public $name;
		public $id;
		public $course;
		
		public $discussions = array();
		public $dCount = 0;
		
		public $students = array();
		public $spectrum = array();
		public $totalStudents = 0;
		public $studentCols = 0;
		
		public $postAuthor = array();
		public $postFeedback = array();
		public $totalPosts = 0;
		public $totalFeedbacks = 0;
		
		public function addDiscussion($disc){
			$this->discussions[$this->dCount] = $disc;
			$this->dCount++;
		}
		
		public function addStudent($id){
			$this->students[$this->totalStudents] = $id;
			$this->totalStudents++;
		}
		
		public function addSpectrum($index){
			$this->spectrum[count($this->spectrum)] = $index;
		}
		
		public function hasStudent($id){
			return in_array($id, $this->students);
		}
		
		public function addPostStat($post){
			if($post->parent != 0){
				$this->totalPosts++;
			}
			if(!isset($this->postAuthor[$post->author])){
				$this->postAuthor[$post->author] = 1;
			}else{
				$this->postAuthor[$post->author]++;
			}
		}
		
		public function addPostFeedback($post){
			$this->totalFeedbacks++;
			if(!isset($this->postFeedback[$post->author])){
				$this->postFeedback[$post->author] = 1;
			}else{
				$this->postFeedback[$post->author]++;
			}
		}
		
		public function getSpectrumFromId($id){
			for($i=0; $i < $this->totalStudents-1; $i++){
				if($this->students[$i]==$id){
					return $this->spectrum[$i];
				}
			}
		}
		
	}
